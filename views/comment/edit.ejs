<%- layout("layout/Boilerplate.ejs") %>
<body>
    <div class="offset-1">
        <h1 class="mb-3 mt-4">Edit Comment</h1>
        <form class="needs-validation" method="post" action="/posts/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT" novalidate>
            <div class="mb-3 col-8">
                <label for="content" class="form-label">Comment :</label>
                <textarea class="form-control" id="content" name="content" rows="3" required><%= comment.content %></textarea>
                <div class="invalid-feedback">
                    Comment must be required
                </div>
            </div>
            <button type="submit " class="btn btn-primary">Submit</button>
        </form>
    </div>  
</body>
